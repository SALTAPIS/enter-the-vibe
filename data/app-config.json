{
  "version": "1.0.0",
  "name": "Enter the Vibe",
  "description": "A dynamic credits sequence synchronized with audio beats",
  
  "display": {
    "timing": {
      "minDisplayTime": 300,
      "minDisplayTimeRange": {
        "min": 100,
        "max": 2000,
        "step": 50,
        "default": 300
      }
    },
    "fonts": {
      "layouts": {
        "single": {
          "nameFirst": "clamp(6rem, 12vw, 12rem)",
          "nameLast": "clamp(6rem, 12vw, 12rem)",
          "description": "clamp(1.2rem, 3vw, 2.5rem)"
        },
        "grid": {
          "nameFirst": "clamp(2rem, 6vw, 4rem)",
          "nameLast": "clamp(2rem, 6vw, 4rem)",
          "description": "clamp(0.8rem, 2vw, 1.5rem)"
        },
        "row": {
          "nameFirst": "clamp(2rem, 6vw, 4rem)",
          "nameLast": "clamp(2rem, 6vw, 4rem)",
          "description": "clamp(0.8rem, 2vw, 1.5rem)"
        },
        "firstnameLastname": {
          "nameFirst": "clamp(5rem, 12vw, 10rem)",
          "nameLast": "clamp(5rem, 12vw, 10rem)"
        },
        "title": {
          "text": "clamp(10rem, 20vw, 20rem)"
        },
        "bilingual": {
          "heading": "clamp(2.5rem, 6vw, 4rem)",
          "text": "clamp(2rem, 5vw, 3.5rem)"
        },
        "hierarchical": {
          "heading": "clamp(3rem, 7vw, 5rem)",
          "text": "clamp(2.5rem, 6vw, 4rem)"
        }
      },
      "families": [
        "font-anton",
        "font-clash-display",
        "font-cabinet-grotesk",
        "font-satoshi",
        "font-general-sans",
        "font-switzer",
        "font-melodrama",
        "font-tanker"
      ]
    },
    "colors": {
      "blue": "#4495F1",
      "gold": "#D1A032",
      "green": "#33FF33",
      "red": "#FF0000",
      "white": "#FFFFFF",
      "neon": {
        "pink": "#FF10F0",
        "blue": "#00FFFF",
        "green": "#39FF14",
        "yellow": "#FFFF00",
        "orange": "#FF6600",
        "purple": "#8A2BE2"
      }
    },
    "effects": {
      "electric": {
        "duration": 0.3,
        "infinite": true
      },
      "flicker": {
        "duration": 0.5,
        "infinite": true
      },
      "glitch": {
        "duration": 0.5,
        "infinite": true
      }
    }
  },
  
  "audio": {
    "beatDetection": {
      "peakThreshold": {
        "default": 0.05,
        "min": 0.01,
        "max": 0.20,
        "step": 0.01
      },
      "noiseFloor": {
        "default": 70,
        "min": 30,
        "max": 150,
        "step": 1
      },
      "frequencies": {
        "presets": {
          "bass": {
            "start": 0,
            "end": 20,
            "description": "Bass (Low)"
          },
          "mid": {
            "start": 10,
            "end": 60,
            "description": "Mids"
          },
          "high": {
            "start": 50,
            "end": 100,
            "description": "Highs"
          },
          "full": {
            "start": 0,
            "end": 120,
            "description": "Full Spectrum"
          }
        },
        "custom": {
          "start": {
            "default": 10,
            "min": 0,
            "max": 100,
            "step": 1
          },
          "end": {
            "default": 60,
            "min": 10,
            "max": 120,
            "step": 1
          }
        }
      },
      "fallbackBeats": {
        "enabled": false,
        "interval": {
          "default": 300,
          "min": 100,
          "max": 1000,
          "step": 50
        }
      },
      "analyzer": {
        "fftSize": 512,
        "smoothingTimeConstant": 0.7,
        "peakHoldTime": 250,
        "energyDecay": 0.95,
        "cutoffDecay": 0.95
      }
    },
    "visualization": {
      "heightMultiplier": 0.7,
      "maxBins": 120
    }
  },
  
  "layout": {
    "positions": {
      "topLeft": { "top": "15%", "left": "15%" },
      "topCenter": { "top": "15%", "left": "50%", "transformX": "-50%" },
      "topRight": { "top": "15%", "right": "15%" },
      "middleLeft": { "top": "50%", "left": "15%", "transformY": "-50%" },
      "middleCenter": { "top": "50%", "left": "50%", "transform": "translate(-50%, -50%)" },
      "middleRight": { "top": "50%", "right": "15%", "transformY": "-50%" },
      "bottomLeft": { "bottom": "15%", "left": "15%" },
      "bottomCenter": { "bottom": "15%", "left": "50%", "transformX": "-50%" },
      "bottomRight": { "bottom": "15%", "right": "15%" }
    },
    "grid": {
      "rows": 2,
      "cols": 2,
      "padding": "10%"
    },
    "row": {
      "itemsPerRow": 3,
      "verticalPadding": "30%"
    }
  },
  
  "phases": {
    "phase1": {
      "name": "Credits Sequence",
      "enabled": true
    },
    "phase2": {
      "name": "Main Title",
      "enabled": true,
      "duration": 2.5
    },
    "phase3": {
      "name": "Digital Landscape",
      "enabled": true
    },
    "endScene": {
      "name": "End Scene",
      "enabled": true
    }
  },
  
  "credits": {
    "categoryStyling": {
      "tech": {
        "effect": "electric",
        "color": "#4495F1"
      },
      "creative": {
        "effect": "flicker",
        "color": "#FFFFFF"
      },
      "artist": {
        "effect": "electric",
        "color": "#D1A032"
      },
      "writer": {
        "effect": "flicker",
        "color": "#FFFFFF"
      },
      "hacker": {
        "effect": "flicker",
        "color": "#33FF33"
      },
      "special": {
        "effect": "glitch",
        "color": "#FF10F0"
      },
      "title": {
        "effect": "electric",
        "color": "#4495F1"
      }
    },
    "defaultLayout": "single",
    "layoutDistribution": {
      "single": 0.3,
      "grid": 0.2,
      "row": 0.2,
      "firstnameLastname": 0.1,
      "bilingual": 0.1,
      "hierarchical": 0.1
    }
  },
  
  "controls": {
    "beatIndicator": {
      "position": {
        "bottom": "20px",
        "right": "20px"
      },
      "size": {
        "width": "80px",
        "height": "80px"
      }
    },
    "beatControls": {
      "position": {
        "top": "20px",
        "right": "20px"
      },
      "width": "300px"
    },
    "debugPanel": {
      "position": {
        "top": "20px",
        "left": "20px"
      },
      "enabled": true
    }
  }
} 